<!DOCTYPE html>
<html>

<head>
    <% include partials/template/head.ejs %>
</head>





<body id="<%= pageID %>">

    <% include partials/template/navigationMenu.ejs %>
        <div class="container pb-2">
            <article>
                <h1>Welcome</h1>
                <p>to our chat page</p>
            </article>
            <div class="row">
                <div class="col-md-10">
                    <!-- col-md-10 grid div start -->
                    <div class="jumbotron chat">
                        <header class="chat-header">
                            <h3 class="chat-title">TechServices Chat</h3>
                        </header>
                        <form class="chat-form" name="chatForm">
                            <div class="form-group">
                                <label for="chat-user-name">Name</label>
                                <input type="text" class="form-control" placeholder="Enter your full name" id="chat-username">
                            </div>
                            <div class="form-group">
                                <label for="chat-message">Message</label>
                                <input type="text" placeholder="Enter a message" class="form-control" id="chat-message" rows="2" autocomplete="off" required>
                                <span class="input-group-btn">
                                    <button class="btn btn-info" id="chat-submit">Chat</button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- col-md-10 grid div end -->
                <div class="col-md-2">
                    <!--col-md-2 start-->
                    <article>
                        <p class="chat-text">Welcome!!Your message will display down here
                            <span>
                                <i class="fas fa-hand-point-down"></i>
                            </span>
                        </p>
                        <div class="chat-display"></div>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <i class="fas fa-phone"></i> 21083838383</li>
                            <li class="list-group-item">
                                <i class="fas fa-envelope-square"></i> Test Street 87 Athens GR</li>
                            <li class="list-group-item">
                                <i class="fas fa-envelope-open"></i>test@email.com</li>
                        </ul>
                    </article>
                </div>
                <!--col-2-end-->
            </div>
        </div>

        <% include partials/content/testingContent.ejs %>

            <% include partials/content/footer.ejs %>

                <% include partials/template/defaultscripts.ejs %>
</body>

</html>